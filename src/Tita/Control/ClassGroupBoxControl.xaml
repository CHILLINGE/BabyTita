<UserControl x:Class="Tita.ClassGroupBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tita"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type local:ClassGroupControl}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,30,0,30"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Button x:Name="groupboxadd" VerticalAlignment="Top" Height="20" HorizontalAlignment="Right" Width="20" Margin="0,0,35,40" Click="AddButtonClicked"/>
        <ScrollViewer Margin="0,40,0,0">
            <Grid x:Name="groupbox">
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
