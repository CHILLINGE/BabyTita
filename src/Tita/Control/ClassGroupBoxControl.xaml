<UserControl x:Class="Tita.ClassGroupBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tita"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type local:ClassGroupControl}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="500,20,20,70"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border BorderThickness="3" BorderBrush="Black">
            <Grid>
                <Button x:Name="groupboxadd" Content="" VerticalAlignment="Top" Height="30" HorizontalAlignment="Right" Width="30" Margin="0,0,35,40" Click="AddButtonClicked"/>
                <ScrollViewer Margin="0,40,0,0" >
                    <StackPanel x:Name="groupbox">
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
