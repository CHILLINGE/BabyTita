<Window x:Class="Tita.smalljTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tita"
        mc:Ignorable="d"
        Title="smalljTest" Height="450" Width="800" Loaded="Small_Loaded">
    <Grid x:Name="main">
        <StackPanel x:Name="DragSubject" Background="Beige" 
                    AllowDrop="True" HorizontalAlignment="Left" Width="400" VerticalAlignment="Top" Height="200">

        </StackPanel>

        <StackPanel x:Name="DropSubject" Background="Bisque" 
                    AllowDrop="True" DragOver="DragSubject_DragOver" Drop="Data_Drop" HorizontalAlignment="Left" Width="400" VerticalAlignment="Top" Height="200" Margin="0,200,0,0">

        </StackPanel>
    </Grid>
</Window>
